<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bg">
        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:src="@mipmap/back"
            android:id="@+id/onBack"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="视频"
            android:padding="5dp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/text_bg"
        android:textSize="14dp"
        android:layout_margin="15dp"
        android:onClick="tinyWindow"
        android:text="小窗口"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/text_bg"
        android:textSize="14dp"
        android:layout_margin="15dp"
        android:onClick="changeClarity"
        android:text="全屏切换清晰度"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="14dp"
        android:background="@drawable/text_bg"
        android:textSize="14dp"
        android:layout_margin="15dp"
        android:onClick="videoList"
        android:text="视频列表"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/text_bg"
        android:textSize="14dp"
        android:layout_margin="15dp"
        android:onClick="useInFragment"
        android:text="在Fragment中使用"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/text_bg"
        android:textSize="14dp"
        android:layout_margin="15dp"
        android:onClick="processHomeKeyInActivity"
        android:text="Activity中时处理播放时按下Home键"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/text_bg"
        android:textSize="14dp"
        android:layout_margin="15dp"
        android:onClick="processHomeKeyInFragment"
        android:text="Fragment中时处理播放时按下Home键"/>
</LinearLayout>
