<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="WAVES APP"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/title_bg"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="加载数据"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:drawableLeft="@mipmap/web_code"
                android:background="@drawable/text_bg"
                android:textSize="20dp"
                android:layout_margin="15dp"
                android:onClick="onHttpRequest"/>
            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="上传文件"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:drawableLeft="@mipmap/uploading"
                android:background="@drawable/text_bg"
                android:textSize="20dp"
                android:layout_margin="15dp"
                android:onClick="onUploadRequest"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="下载文件"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:drawableLeft="@mipmap/downloading"
                android:background="@drawable/text_bg"
                android:textSize="20dp"
                android:layout_margin="15dp"
                android:onClick="onDownloadRequest"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="播放视频"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:drawableLeft="@mipmap/video"
                android:background="@drawable/text_bg"
                android:textSize="20dp"
                android:layout_margin="15dp"
                android:onClick="onShowVideoRequest"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="圆角 圆形"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:drawableLeft="@mipmap/img"
                android:background="@drawable/text_bg"
                android:textSize="20dp"
                android:layout_margin="15dp"
                android:onClick="onShowImgRequest"/>

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="权限申请"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="20dp"
                android:drawableLeft="@mipmap/storage"
                android:background="@drawable/text_bg"
                android:textSize="20dp"
                android:layout_margin="15dp"
                android:onClick="onShowPermissionRequest"/>
            <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="滑動控件封裝"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:drawableLeft="@mipmap/scroll"
            android:background="@drawable/text_bg"
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:onClick="onShowScrollView"/>

            <com.lt.integrate.frame.view.MultipleTextViewGroup
                android:id="@+id/textViewGroup"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                app:textSize="12sp"
                app:textWordMargin="10dp"
                app:textLineMargin="10dp"
                app:textColor="#ff0000"
                app:textPaddingLeft="10dp"
                app:textPaddingRight="10dp"
                app:textPaddingTop="10dp"
                app:textPaddingBottom="10dp"
                app:overspread="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="  E-mail : lewaves@yeah.net \n\n项目地址：Seconds-framework"
                android:layout_margin="15dp"
                android:onClick="OpenGitHubHttp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>